/* miniprogram/pages/my/my.wxss */
page{
  background-color: #f5f5f5;
}
/* 个人信息 */
.userInfo-box{
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
  background: #ff5a46;
  background: -moz-linear-gradient(left,  #ff5a46 0%, #ff5474 100%);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ff5a46), color-stop(100%,#ff5474));
  background: -webkit-linear-gradient(left,  #ff5a46 0%,#ff5a46 100%);
  background: -o-linear-gradient(left,  #ff5a46 0%,#ff5474 100%);
  background: -ms-linear-gradient(left,  #ff5a46 0%,#ff5474 100%);
  background: linear-gradient(to right,  #ff5a46 0%,#ff5474 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ff5a46', endColorstr='#ff5474',GradientType=0 );
}
.userInfo-box-ex{
  width: 100%;
  height: 260rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #ff5a46;
  background: -moz-linear-gradient(left,  #ff5a46 0%, #ff5474 100%);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ff5a46), color-stop(100%,#ff5474));
  background: -webkit-linear-gradient(left,  #ff5a46 0%,#ff5a46 100%);
  background: -o-linear-gradient(left,  #ff5a46 0%,#ff5474 100%);
  background: -ms-linear-gradient(left,  #ff5a46 0%,#ff5474 100%);
  background: linear-gradient(to right,  #ff5a46 0%,#ff5474 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ff5a46', endColorstr='#ff5474',GradientType=0 );
}
.userInfo-box-ex image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
   margin-left: 30rpx;
  margin-right: 20rpx;
}
.userInfo-box-ex text{
  font-size: 30rpx;
  color: #fff;
}
.userInfo-box .userInfo{
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.userInfo-box .userInfo image{
  width: 120rpx;
  height: 120rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.userInfo-box .userInfo .middle{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.userInfo-box .userInfo .middle .name{
  width: 100%;
  padding-bottom:10rpx;
  font-size: 30rpx;
  color: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.userInfo-box .userInfo .middle .name text{
  font-size: 22rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.4);
  height: 35rpx;
  line-height: 35rpx;
  padding: 0 25rpx;
  margin-left: 30rpx;
  border-radius: 15rpx;
}
.userInfo-box .userInfo .middle .vip{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 26rpx;
  color: #fff;
}

  
.userInfo-box .userInfo .right{
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;

}
.userInfo-box .userInfo .right image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 15rpx;
  margin-right: 10rpx;
  border-radius: 0;
}
/* panel */
.panel{
  width: 710rpx;
  margin-left: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  margin-top: 20rpx;
}
.panel .title{
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid #f4f4f4;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  text-indent: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.panel .container{
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
.panel .container .item{
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 20rpx 0;
}
.panel .container .item image{
  width: 50rpx;
  height: 50rpx;

}
.panel .container .item text{
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #474747;
}