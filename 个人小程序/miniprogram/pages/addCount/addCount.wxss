/* miniprogram/pages/addCount/addCount.wxss */
input,textarea{
  font-size: 28rpx;
  color: #474747;
}
.top{
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 99999;
}
.top-out{
  width: 100%;
  height: 140rpx;
  background-color: #fff;
}
.no-border{
  border: none !important;
}
page{
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}
.panel{
  width: 710rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding-bottom: 20rpx;
}
.panel .title{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  text-indent: 20rpx;
  color: #fff;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f4f4f4;
  background: rgba(103, 207, 34,1);
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}
.panel .lable-input{
  width: 670rpx;
  margin-left: 20rpx;
  height: 90rpx;
  border: 1rpx solid #f4f4f4;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
  position: relative;
}
.panel .lable-input .lable{
  width: 160rpx;
  height: 100%;
  font-size: 28rpx;
  color: #474747;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  text-indent: 20rpx;
}
.panel .lable-input .input{
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #474747;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.panel .lable-input .icon{
  width: 35rpx;
  height: 35rpx;
  margin: 0 20rpx;
}
.bottom-fixed{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.bottom-fixed .button{
  width: 94%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #67CF22;
  border-radius: 10rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
.panel .lable-input .picker{
  width: 670rpx;
  position: absolute;
  top: 90rpx;
  background-color: #fff;
  border: 1rpx solid #f4f4f4;
  z-index: 9999;
}
.panel .lable-input .picker .picker-item{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  text-indent: 20rpx;
  font-size: 28rpx;
  color: #474747;
  border-bottom: 1rpx solid #f4f4f4;
}
.panel .lable-input .picker .picker-item:last-child{
  border-bottom: none;
}
.botton-hover{
  opacity: 0.5;
}
.sub-title{
  width: 100%;
  height: 90rpx;
  text-indent: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #474747;
  font-size: 28rpx;
  font-weight: bold;
  
}
.remark{
  width: 670rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.placeholder-classs{
  font-size: 26rpx;
  color: #cdcdcd;
}
.remark textarea{
  flex: 1;
  border: 1rpx solid #f4f4f4;
  height: 100rpx;
  padding:20rpx 20rpx;
}
.remark .confirm{
  height: 140rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #67CF22;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #67CF22;
}
.remarks{
  width: 670rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.remarks .out{
  width: 630rpx;
  height: auto;
  margin-top: 20rpx;
  padding: 20rpx;
  background: rgba(103, 207, 34, 0.2);
  border: 1rpx solid #67CF22;
  font-size: 28rpx;
  color: #474747;
  border-radius: 8rpx;
  word-break: break-all;
}
.panel .ex{
  width: 100%;
  margin-top: 20rpx;
}
.add-more{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  
}
.add-more .inside{
  padding: 15rpx 20rpx;
  background-color: #67CF22;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border-radius: 10rpx;
}
.add-more .inside image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.item{
  width: 88%;
  margin: 20rpx 3%;
  padding: 20rpx 3%;
  border-radius: 15rpx;
  background-color: rgba(103, 207, 34, 0.2);
}
.item view{
  font-size: 28rpx;
  color: #474747;
  padding-bottom: 10rpx;
}