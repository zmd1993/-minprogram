/**index.wxss**/
page{background-color: #252328;}
.search{margin: 10px;background: #fff;border-radius: 5px;height: 40px;display: flex;justify-content: flex-start;align-items: center;}
.search image{width: 18px;height: 18px;margin-left: 15px;}
.search input{flex: 1;margin-left: 10px;margin-right: 20px;font-size: 14px;}
.panel{margin: 10px;background-color: #fff;border-radius: 5px;display: flex;justify-content: flex-start;align-items: center;padding: 15px;flex-wrap: wrap;}
.no-padding{padding: 0 !important;}
.panel .p-item{width: 25%;display: flex;justify-content: center;align-items: center;flex-direction: column;padding: 5px 0;}
.panel .p-item image{width: 55px;height: 55px;}
.panel .p-item text{color: #515151;font-size: 14px;margin-top: 5px;}
.panel .l-item{display: flex;justify-content: center;align-items: center;width: 100%;}
.panel .l-item image{width: 80px;height: 80px;}
.panel .l-item .l-right{flex: 1;}
.panel .l-item .l-right .title{font-size: 14px;color: #333;}
.panel .l-item .l-right .sub-title{font-size: 12px;color: #707070;margin-top: 3px;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 1;-webkit-box-orient: vertical;}
.panel .l-item .l-right .footer{border-top: 1px solid #dbdbdb;margin-top: 10px;font-size: 12px;color: #8a8a8a;padding: 5px 0;}
/* 导航栏 */
.top-nav{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding: 20rpx 0;
}
.top-nav .li{
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 20rpx 0;
}
.top-nav .li image{
  width: 80rpx;
  height: 80rpx;
}
.top-nav .li text{
  font-size: 28rpx;
  color: #2a2a2a;
  margin-top: 20rpx;
}
