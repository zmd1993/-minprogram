.container{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
button{
  background: none;
  border: none;
  outline: line;
  padding: 0;
  margin: 0;
}
button::before,button::after{
  border: none;
}
.bg{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}
.begin{
  width: 300rpx;
  height: 300rpx;
  position: relative;
}
.begin .text{
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 24px;
  font-weight: bold;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}
.sun{
  position: absolute;
  top: 0;
  left: 0;
  width: 300rpx;
  height: 300rpx;
  z-index: 9900;
  -webkit-transform: rotate(360deg);
  animation: rotation 4s linear infinite;
}
@-webkit-keyframes rotation{
  from {-webkit-transform: rotate(0deg);}
  to {-webkit-transform: rotate(360deg);}
}
.he{
  position: absolute;
  top: 200rpx;
  right: 100rpx;
  width: 100rpx;
  height: 100rpx;
}
.he1{
  position: absolute;
  top: 150rpx;
  right: 300rpx;
  width: 100rpx;
  height: 100rpx;
}
.he2{
  position: absolute;
  top: 300rpx;
  left: 100rpx;
  width: 100rpx;
